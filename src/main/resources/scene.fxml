<StackPane fx:id="aktualniProstor" stylesheets="styles.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vse.seso00.MainController">


<BorderPane >

    <top>
        <VBox BorderPane.alignment="CENTER">
            <Label fx:id="locationName" />
            <Label fx:id="locationDescription" />
        </VBox>
    </top>


    <right>
        <VBox spacing="20" BorderPane.alignment="CENTER">
            <Label>
                <font>
                    <Font size="15.0" />
                </font>
            </Label>

            <VBox spacing="20">
                <Label>
                    <text>Východy</text>
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
                <VBox fx:id="exits" />
            </VBox>

            <VBox spacing="20">
                <Label>
                    <text>Předměty</text>
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
                <VBox fx:id="items" />
            </VBox>

            <VBox spacing="20">
                <Label>
                    <text>Batoh</text>
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
                <VBox fx:id="backpack" />
            </VBox>

            <VBox spacing="20">
                <Label>
                    <text>NPC</text>
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
                <VBox fx:id="npcs" />
            </VBox>

        </VBox>
    </right>

    <bottom>
        <VBox>
            <TextArea fx:id="textOutput" editable="false" />
            <TextField fx:id="textInput" onKeyPressed="#onInputKeyPressed" />
        </VBox>
    </bottom>
